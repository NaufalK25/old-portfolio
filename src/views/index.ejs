<main class="flex-1 mt-32">
    <!-- Scroll To Top Button -->
    <button title="Up" class="hidden fixed right-5 bottom-5 z-10 cursor-pointer bg-slate-800 dark:bg-slate-200 rounded-full p-2" id="scroll-to-top">
        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" class="fill-slate-200 dark:fill-slate-800">
            <path d="M0 0h24v24H0V0z" fill="none" />
            <path d="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z" />
        </svg>
    </button>
    <!-- About Me -->
    <section id="about-me" class="flex">
        <section class="flex flex-col w-1/2 gap-y-3 justify-center items-center px-10">
            <h3 class="text-2xl font-bold text-center">
                Hello, My Name is Muhammad Naufal Kateni
            </h3>
            <p>
                Good day! I am a Computer Science Student at Sriwijaya
                University. I have an interest in Backend Development
                especially in Web Development. I am currently learning
                about Node.js and TypeScript. Nice to meet you!
            </p>
            <!-- Contact Me -->
            <section class="flex gap-x-3 bg-slate-400 dark:bg-slate-300 rounded-md p-1.5 shadow-lg">
                <% for (const contact of contacts) { %>
                <a href="<%= contact.url %> " target="_blank" rel="noopener noreferrer" title="<%= contact.contact %>">
                    <%- contact.svg %>
                </a>
                <% } %>
            </section>
        </section>
        <section class="flex justify-center w-1/2">
            <a href="img/muhammad-naufal-kateni.jpg" target="_blank" rel="noopener noreferrer" class="w-5/12">
                <img src="img/muhammad-naufal-kateni.jpg" alt="Muhammad Naufal Kateni" title="Muhammad Naufal Kateni" class="rounded-full" />
            </a>
        </section>
    </section>
    <!-- My Skills -->
    <section id="my-skills" class="flex flex-col justify-center items-center mt-24 gap-y-10">
        <%- include( 'includes/section-title', { sectionTitle: 'My Skills' }) %>
        <!-- My Skills List -->
        <section class="flex text-center gap-10 flex-wrap w-full justify-center">
            <% for (const skill of skills) { %>
            <section class="border border-slate-800 dark:border-slate-100 p-16 w-1/3 gap-y-5 rounded-md flex flex-col items-center" title="<%= skill.name %>">
                <h4 class="font-bold text-xl"><%= skill.name %></h4>
                <ul class="flex gap-x-3 flex-row bg-slate-400 dark:bg-slate-300 p-1.5 rounded-md shadow-lg">
                    <% for (const stack of skill.stacks) { %>
                    <li>
                        <p title="<%= stack.name %>" class="cursor-pointer">
                            <%- stack.svg %>
                        </p>
                    </li>
                    <% } %>
                </ul>
            </section>
            <% } %>
        </section>
    </section>
    <!-- My Projects -->
    <section id="my-projects" class="flex justify-center mt-24 flex-col items-center gap-y-10">
        <%- include('includes/section-title', { sectionTitle: 'My Projects' }) %>
        <section id="my-project-list" class="flex text-center gap-10 flex-wrap w-full justify-center"></section>
    </section>
    <!-- Download -->
    <section class="flex justify-center p-10 mt-24 flex-col items-center gap-y-10">
        <%- include( 'includes/section-title', { sectionTitle: 'Download' }) %>
        <%- include('includes/download-button') %>
    </section>
</main>
